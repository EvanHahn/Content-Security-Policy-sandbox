<!DOCTYPE html>
<html>
<head>

<meta charset="utf-8">
<title>Content Security Policy sandbox</title>
<link rel="stylesheet" href="main.css">

</head>
<body>

<h1>Content Security Policy test app</h1>

<p>Type a CSP here and it'll be set.</p>

<form action="/" method="get">
  <textarea name="policy"><%- policy %></textarea>
  <select name="header">
    <% constants.headers.forEach(function (header) { %>
      <% if (header === currentHeader) { %>
        <option selected value="<%= header %>"><%= header %></option>
      <% } else { %>
        <option value="<%= header %>"><%= header %></option>
      <% } %>
    <% }) %>
  </select>
  <input type="submit" value="Go">
</form>

</body>
</html>
